{
  "manifest_version": 3,
  "name": "ClickFix Clipboard Guard",
  "description": "Protects against clipboard hijacking attacks (ClickFix, malware payloads, and more).",
  "version": "1.3.2",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["modal.css"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "modal.css",
        "popup.css",
        "pageHook.js",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
